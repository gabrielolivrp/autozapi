{
  "swagger": "2.0",
  "info": {
    "title": "Autozapi",
    "description": "Serviço para comunicação com o WhatsApp",
    "version": "1.0.0"
  },
  "host": "localhost:3333",
  "basePath": "/",
  "schemes": [
    "http"
