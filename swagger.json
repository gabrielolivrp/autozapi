            "schema": {
              "type": "object",
              "properties": {
                "chatId": {
                  "type": "string",
                  "example": "553799999999@g.us"
                },
                "base64": {
                  "type": "string",
                  "example": "..."
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/{applicationId}/{sessionId}/send/image": {
      "post": {
        "description": "Envia uma imagem para um determinado número",
        "parameters": [
          {
            "name": "applicationId",
            "in": "path",
            "required": true,
            "type": "string"
